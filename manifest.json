{
	"name": "Appleseed Chrome extension",
	"description": "Rewarding your green lifestyle",
	"version": "1.0",
	"manifest_version": 3,

	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
},
	"permissions": [
		"storage",
		"activeTab",
        "tabs"
	],
	"content_scripts": [
        {
            "matches":["<all_urls>"],
            "js":["popup.js"],
            "run_at":"document_end"
        }
    ]

}